    </style>

    <style name="btn_numbers_row" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/dark_primary_text</item>
        <item name="android:background">@drawable/btn_number</item>

    </style>
    <style name="btn_numbers_row_orange" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/dark_primary_text</item>
        <item name="android:background">@drawable/btn_number_orange</item>

